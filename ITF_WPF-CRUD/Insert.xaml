<Window x:Class="ITF_WPF_CRUD.Insert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITF_WPF_CRUD"
        mc:Ignorable="d"
        Title="Insert" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="126,33,0,0" TextWrapping="Wrap" Text="Welcome new User!" VerticalAlignment="Top"/>
        <TextBlock x:Name="label_username" HorizontalAlignment="Left" Margin="39,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Username"/></TextBlock>
        <TextBlock x:Name="label_password" HorizontalAlignment="Left" Margin="39,110,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <TextBox x:Name="text_username" HorizontalAlignment="Left" Height="23" Margin="119,69,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="text_password" HorizontalAlignment="Left" Height="23" Margin="119,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="insertBtn" Content="Insert" HorizontalAlignment="Left" Margin="116,148,0,0" VerticalAlignment="Top" Width="130" Click="insertBtn_Click"/>


    </Grid>
</Window>